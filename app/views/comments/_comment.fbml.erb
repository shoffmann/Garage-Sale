<table class="comment_post">
	<tbody>
		<tr>
			<td class="comment_image"><%= fb_profile_pic comment.user, :class => 'friend_avatar' %></td>

			<td>
				<table class="comment_content">
					<tbody>
						<tr>
							<td class="comment_info">
								<div class="comment_header">
									<%= fb_name current_user, :use_you=>true %> wrote
									<br/>
									<small>
										at <%= comment.created_at.strftime('%l:%M %p') %>
										on <%= comment.created_at.strftime('%B %d, %Y') %>
									</small>
								</div>
								<div class="comment_text"><%= comment.body %></div>
							</td>
						</tr>
						
						<tr>
							<td class="comment_footer">
								<div class="comment_actions">
									<div><%= link_to("Delete", {:action => "destroy", :id => @comment }, 
											:class => "comment_delete_button",
											:confirm => "Are you sure you want to delete this comment?", :method => :delete) %></div>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
	</tbody>
</table>